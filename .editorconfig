# EditorConfig is awesome: https://EditorConfig.org

# 頂層 EditorConfig 文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Markdown 文件
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.yml]
indent_size = 2

# TypeScript/JavaScript 文件
[*.{ts,js,tsx,jsx}]
indent_size = 2
quote_type = single
